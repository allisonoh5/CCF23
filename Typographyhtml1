<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Typography Playground</title>
    <style>
        /* Add some basic styling */
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        #textDisplay {
            border: 1px solid #ddd;
            padding: 20px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Interactive Typography Playground</h1>

    <input type="text" id="textInput" placeholder="Enter your text here">
    <br>

    <label for="fontSize">Font Size:</label>
    <input type="range" id="fontSize" min="10" max="100" value="30">
    <br>

    <label for="textColor">Text Color:</label>
    <input type="color" id="textColor" value="#000000">
    <br>

    <div id="textDisplay">Your text will appear here</div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const textInput = document.getElementById('textInput');
    const fontSizeInput = document.getElementById('fontSize');
    const textColorInput = document.getElementById('textColor');
    const textDisplay = document.getElementById('textDisplay');

    // Update text in the display area
    textInput.addEventListener('input', () => {
        textDisplay.textContent = textInput.value;
    });

    // Change font size
    fontSizeInput.addEventListener('input', () => {
        textDisplay.style.fontSize = fontSizeInput.value + 'px';
    });

    // Change text color
    textColorInput.addEventListener('input', () => {
        textDisplay.style.color = textColorInput.value;
    });
});

    </script>
</body>
</html>

